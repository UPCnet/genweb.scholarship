<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    lang="en"
    metal:use-macro="context/main_template/macros/master"
    i18n:domain="genweb.scholarship">

    <body>
        <metal:content-core fill-slot="content-core">
        <metal:block define-macro="content-core">

            <div class="row-fluid">
                <div tal:condition="context/organism">
                    <h2 i18n:translate="">Responsible Organism</h2>
                    <p><tal:block tal:replace="structure context/organism/output|nothing"/></p>
                </div>
                <div tal:condition="context/recipients">
                    <h2 i18n:translate="">Recipients</h2>
                    <p><tal:block tal:replace="structure context/recipients/output|nothing"/></p>
                </div>
                <div tal:condition="context/regulations">
                    <h2 i18n:translate="">Regulations</h2>
                    <p><tal:block tal:replace="structure context/regulations/output|nothing"/></p>
                </div>
                <div tal:condition="context/others">
                    <h2 i18n:translate="">Others</h2>
                    <p><tal:block tal:replace="structure context/others/output|nothing"/></p>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="box" style="text-align: left; ">
                        <h3 style="text-align: center;" i18n:translate="">Requirements</h3>
                        <hr class="liniaDalt" />
                        <ul class="list list-index" style="text-align:left; ">
                            <li><div tal:replace="structure context/general_requirements/output|nothing"/></li>
                            <li><div tal:replace="structure context/academic_requirements/output|nothing"/></li>
                            <li><div tal:replace="structure context/economic_requirements/output|nothing"/></li>
                            <li><div tal:replace="structure context/incompatibilities/output|nothing"/></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="box" style="text-align: left; ">
                        <h3 style="text-align: center;" i18n:translate="">Application</h3>
                        <hr class="liniaDalt" />
                        <ul class="list list-index" style="text-align:left; ">
                            <li>
                                <span>
                                    <strong i18n:translate="">Start date of application:</strong>
                                    <tal:block condition="context/start_date">
                                        <tal:date content="python:context.start_date.strftime('%d/%m/%Y')"></tal:date>
                                    </tal:block>
                                </span>
                            </li>
                            <li>
                                <span>
                                    <strong i18n:translate="">End date of application:</strong>
                                    <tal:block condition="context/deadline">
                                        <tal:date content="python:context.deadline.strftime('%d/%m/%Y')"></tal:date>
                                    </tal:block>
                                </span>
                            </li>
                            <li><div tal:replace="structure context/submission/output|nothing"/></li>
                            <li><div tal:replace="structure context/documentation/output|nothing"/></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="box" style="text-align: left; ">
                        <h3 style="text-align: center;" i18n:translate="">Scholarship</h3>
                        <hr class="liniaDalt" />
                        <ul class="list list-index" style="text-align:left; ">
                            <li>
                                <span>
                                    <strong i18n:translate="">General amount of scholarship:</strong>
                                    <div tal:replace="structure context/amount|nothing"/>
                                    <span>€</span>
                                </span>
                            </li>
                            <li>
                                <span>
                                    <strong i18n:translate="">Additional amounts of scholarship:</strong>
                                    <div tal:replace="structure context/additional_amount|nothing"/>
                                    <span>€</span>
                                </span>
                            </li>
                            <li><div tal:replace="structure context/duration/output|nothing"/></li>
                            <li><div tal:replace="structure context/payment/output|nothing"/></li>
                            <li><div tal:replace="structure context/beneficiaries/output|nothing"/></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="box" style="text-align: left; ">
                        <h3 style="text-align: center;" i18n:translate="">Awards</h3>
                        <hr class="liniaDalt" />
                        <ul class="list list-index" style="text-align:left; ">
                            <li><div tal:replace="structure context/criteria/output|nothing"/></li>
                            <li>
                                <span>
                                    <strong i18n:translate="">Publication of the award resolution:</strong>
                                    <tal:block condition="context/award_date">
                                        <tal:date content="python:context.award_date.strftime('%d/%m/%Y')"></tal:date>
                                    </tal:block>
                                </span>
                            </li>
                            <li><div tal:replace="structure context/award_resolution/output|nothing"/></li>
                            <li><div tal:replace="structure context/allegations/output|nothing"/></li>
                            <li><div tal:replace="structure context/regulations/output|nothing"/></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div tal:content="structure view/getContactPage" />
                </div>
            </div>
        </metal:block>
    </metal:content-core>

</body>
</html>
